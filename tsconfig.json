{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@main/*": ["src/components/main/*"],
            "@header/*": ["src/components/header/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["node", "vite/client"],
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./**/*",
        ".eslintrc.js",
        "**/*/*.json",
        "package.json"
    ]
}
